{
  "name": "C/C++ Development Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": false,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "vscodevim.vim",
        "tomphilbin.gruvbox-themes"
      ],
      "settings": {
        "workbench.colorTheme": "Gruvbox Dark Hard",
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        }
      }
    }
  },

  "postCreateCommand": "bash -c 'sudo apt-get update && sudo apt-get install -y build-essential gdb valgrind cmake ninja-build clang clang-format clang-tidy lldb strace ltrace neovim curl wget git zsh && curl -s https://ohmyposh.dev/install.sh | bash -s && echo \"eval \\\"\\$(oh-my-posh init zsh --config https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/1_shell.omp.json)\\\"\" >> ~/.zshrc && sudo chsh -s $(which zsh) $(whoami)'",

  "remoteUser": "vscode",
  
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,readonly,type=bind,consistency=cached"
  ],

  "forwardPorts": [],

  "portsAttributes": {},

  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ]
}
